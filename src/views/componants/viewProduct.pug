extends ../layout/base

block content
  html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Products Maing Pag 
      
    body.bg-linear-to-b.from-500.to-500
      .bg-gray-100.py-8(class='dark:bg-gray-800')
        .max-w-6xl.mx-auto.px-4(class='sm:px-6 lg:px-8')
          .flex.flex-col.-mx-4(class='md:flex-row')
            .px-4(class='md:flex-1')
              .rounded-lg.bg-gray-300.mb-4(class='h-[460px] dark:bg-gray-700')
                img.w-full.h-full.object-cover(src=imgurl alt='Product Image')
              .flex.-mx-2.mb-4
                .px-2(class='w-1/2')
                  button.w-full.bg-gray-900.text-white.py-2.px-4.rounded-full.font-bold(class='dark:bg-gray-600 hover:bg-gray-800 dark:hover:bg-gray-700') Add to Cart
                .px-2(class='w-1/2')
            .px-4(class='md:flex-1')
              h2.text-2xl.font-bold.text-gray-800.mb-2(class='dark:text-white')=name
              p.text-gray-600.text-sm.mb-4(class='dark:text-gray-300')

              .flex.mb-4
                .mr-4
                  span.font-bold.text-gray-700(class='dark:text-gray-300') Price:   
                  span.text-gray-600(class='dark:text-gray-300')=`${price}$`
                div
                  span.font-bold.text-gray-700(class='dark:text-gray-300') Availability:
                  span.text-gray-600(class='dark:text-gray-300') In Stock
              .mb-4
                span.font-bold.text-gray-700(class='dark:text-gray-300') 
                .flex.items-center.mt-2
              .mb-4
                span.font-bold.text-gray-700(class='dark:text-gray-300') 
                .flex.items-center.mt-2
              div
                span.font-bold.text-gray-700(class='dark:text-gray-300') Product Description:
                p.text-gray-600.text-sm.mt-2(class='dark:text-gray-300')=description


          
      
